<div class="container">
  <h1 class="header">Pig Budget</h1>
  <di class="splash">
    <%= image_tag "budget.svg", { class: 'logo' } %>
  </di>
  <% if current_user.nil? %>
    <div class="links">
      <%= link_to 'LOG IN', new_user_session_path, { class: 'btn-login'} %>
      <%= link_to 'SIGN UP', new_user_registration_path, { class: 'sign-up'} %>
    </div>
  <% else %>
    <%= button_to 'LOG OUT', destroy_user_session_path, method: :delete, class: 'sign-in-btn' %>
  <% end %>
</div>
